<% content_for :title, 'Play list' %>
<h1>Play list</h1>

<%= render 'shared/form_messages' , { messages: @play_list.errors } %>

<%= form_for @play_list do |f| %>

  <div class="form-group">
    <%= f.label :name , class: 'control-label' %>
    <%= f.text_field :name , class: 'form-control' , maxlength: Constants::NAME_MAX_LENGTH %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>

  <% if params[:action] != 'new' && params[:action] != 'create' %>
    <%= link_to play_list_path( @play_list ) ,
      method: :delete,
      data: { confirm: 'Are you sure you want to delete the play list?' },
      class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-remove"></span> Delete play list
    <% end %>
  <% end %>

<% end %>
